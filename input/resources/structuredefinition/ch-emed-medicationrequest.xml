<StructureDefinition xmlns="http://hl7.org/fhir">
   <id value="ch-emed-medicationrequest"/>
   <url value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-medicationrequest"/>
   <version value="0.1.0"/>
   <name value="CHEMEDMedicationRequest"/>
   <title value="CH EMED MedicationRequest"/>
   <status value="active"/>
   <experimental value="false"/>
   <description value="Definition of the medication request"/>
   <mapping>
      <identity value="cda"/>
      <uri value="http://hl7.org/v3/cda"/>
      <name value="CDA (R2)"/>
   </mapping>
   <kind value="resource"/>
   <abstract value="false"/>
   <type value="MedicationRequest"/>
   <baseDefinition value="http://hl7.org/fhir/StructureDefinition/MedicationRequest"/>
   <derivation value="constraint"/>
   <differential>
      <element id="MedicationRequest">
         <path value="MedicationRequest"/>
         <short value="CH EMED MedicationRequest"/>
         <constraint>
               <key value="ch-dosage-2"/>
               <severity value="error"/>
               <human value="If dosing is structured it must be normal or split dosing"/>
               <expression value="dosageInstruction.where($this.conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-normal')).count()=0 or dosageInstruction.where($this.conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-split')).count()=0"/>
         </constraint>
         <constraint>
               <key value="ch-dosage-5"/>
               <severity value="error"/>
               <human value="Provide dosage structured or unstructured, combination is not allowed (provide structured dosage if possible)"/>
               <expression value="dosageInstruction.where($this.conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-nonstructured')).count()=0 or
                                 (dosageInstruction.where($this.conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-normal')).count()=0 and 
                                  dosageInstruction.where($this.conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-split')).count()=0)"/>
         </constraint>
         <mapping>
            <identity value="cda"/>
            <map value="substanceAdministration"/>
         </mapping>
      </element>
      <element id="MedicationRequest.contained">
         <path value="MedicationRequest.contained"/>
         <short value="Medication inline resource"/>
         <min value="1"/>
         <max value="1"/>
      </element>
      <element id="MedicationRequest.extension">
         <path value="MedicationRequest.extension"/>
         <slicing>
            <discriminator>
               <type value="value"/>
               <path value="url"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
      </element>
      <element id="MedicationRequest.extension:treatmentplan">
         <path value="MedicationRequest.extension" />
         <sliceName value="treatmentplan" />
         <short value="Reference to the medication treatment plan"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-ext-treatmentplan" />
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".entryRelationship.substanceAdministration.id"/>
         </mapping>
      </element>

      <!-- document author -->
      <element id="MedicationRequest.extension:authorDocument">
         <path value="MedicationRequest.extension" />
         <sliceName value="authorDocument" />
         <short value="Author of the original document if different from the author of the medical decision (MedicationRequest.performer)"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-ext-author" />
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".author"/>
         </mapping>
      </element>

      <element id="MedicationRequest.identifier">
         <path value="MedicationRequest.identifier"/>
         <short value="MedicationRequest Identifier"/>
         <min value="1"/>
         <max value="1"/>
         <mapping>
            <identity value="cda"/>
            <map value=".id"/>
         </mapping>
      </element>
      <element id="MedicationRequest.identifier.system">
         <path value="MedicationRequest.identifier.system"/>
         <min value="1"/>
         <fixedUri value="urn:ietf:rfc:3986"/>
      </element>
      <element id="MedicationRequest.identifier.value">
         <path value="MedicationRequest.identifier.value"/>
         <short value="Identifier value as UUID"/>
         <min value="1"/>
      </element>
      <element id="MedicationRequest.status">
         <path value="MedicationRequest.status"/>
         <fixedCode value="completed"/>
         <mapping>
            <identity value="cda"/>
            <map value=".statusCode"/>
         </mapping>
      </element>
      <element id="MedicationRequest.medicationReference">
         <path value="MedicationRequest.medicationReference"/>
         <short value="Reference to the contained medication"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-medication"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".consumable.manufacturedProduct.manufacturedMaterial"/>
         </mapping>
      </element>
      <element id="MedicationRequest.subject">
         <path value="MedicationRequest.subject"/>
         <short value="Patient"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-patient"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value="ClinicalDocument.recordTarget"/>
         </mapping>
      </element>
      <element id="MedicationRequest.subject.reference">
         <path value="MedicationRequest.subject.reference"/>
         <min value="1"/>
      </element>

      <!-- MedicationRequest Author -->
      <element id="MedicationRequest.performer">
         <path value="MedicationRequest.performer"/>
         <short value="The author and its organization of the medical decision"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-practitionerrole"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".author.assignedAuthor.assignedPerson/representedOrganization"/>
         </mapping>
      </element>

      <element id="MedicationRequest.performer.extension">
         <path value="MedicationRequest.performer.extension"/>
         <slicing>
            <discriminator>
               <type value="value"/>
               <path value="url"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
      </element>
      <element id="MedicationRequest.performer.extension:time">
         <path value="MedicationRequest.performer.extension"/>
         <sliceName value="time"/>
         <short value="Timestamp of the authorship/data input"/>
         <!-- CDA-spec: author.time 1..1, here 0..1 to allow the representedOrganization to be validly mapped as composition.author -->
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension"/>
            <profile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-ext-epr-time"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".author.time"/>
         </mapping>
      </element>
      <element id="MedicationRequest.performer.reference">
         <path value="MedicationRequest.performer.reference"/>
         <min value="1"/>
      </element>

      <element id="MedicationRequest.reasonCode">
         <path value="MedicationRequest.reasonCode"/>
         <short value="Treatment reason"/>
         <max value="1"/>
         <mapping>
            <identity value="cda"/>
            <map value=".entryRelationship.observation.text"/>
         </mapping>
      </element>
      <element id="MedicationRequest.reasonCode.text">
         <path value="MedicationRequest.reasonCode.text"/>
      </element>
      <element id="MedicationRequest.dosageInstruction">
         <path value="MedicationRequest.dosageInstruction"/>
         <slicing>
            <discriminator>
               <type value="profile"/>
               <path value="$this"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
         <short value="How the medication should be taken"/>
         <min value="1"/>
      </element>
      <element id="MedicationRequest.dosageInstruction:nonstructured">
         <path value="MedicationRequest.dosageInstruction"/>
         <sliceName value="nonstructured"/>
         <short value="Free text dosage instructions"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Dosage"/>
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-nonstructured"/>
         </type>
      </element>
      <element id="MedicationRequest.dosageInstruction:structurednormal">
         <path value="MedicationRequest.dosageInstruction"/>
         <sliceName value="structurednormal"/>
         <short value="Structured Normal Dosing"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Dosage"/>
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-normal-medicationrequest"/>
         </type>
      </element>
      <element id="MedicationRequest.dosageInstruction:structuredsplit">
         <path value="MedicationRequest.dosageInstruction"/>
         <sliceName value="structuredsplit"/>
         <short value="Structured Split Dsosing"/>
         <min value="0"/>
         <max value="*"/>
         <type>
            <code value="Dosage"/>
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-split-medicationrequest"/>
         </type>
      </element>

      <element id="MedicationRequest.dispenseRequest">
         <path value="MedicationRequest.dispenseRequest"/>
         <short value="Medication supply authorization"/>
      </element>
      <element id="MedicationRequest.dispenseRequest.validityPeriod">
         <path value="MedicationRequest.dispenseRequest.validityPeriod"/>
         <short value="Period of validity of the prescription"/>
         <mapping>
            <identity value="cda"/>
            <map value="ClinicalDocument.documentationOf.serviceEvent.effectiveTime"/>
         </mapping>
      </element>
      <element id="MedicationRequest.dispenseRequest.validityPeriod.start">
         <path value="MedicationRequest.dispenseRequest.validityPeriod.start"/>
         <mapping>
            <identity value="cda"/>
            <map value="ClinicalDocument.documentationOf.serviceEvent.effectiveTime.low"/>
         </mapping>
      </element>
      <element id="MedicationRequest.dispenseRequest.validityPeriod.end">
         <path value="MedicationRequest.dispenseRequest.validityPeriod.end"/>
         <mapping>
            <identity value="cda"/>
            <map value="ClinicalDocument.documentationOf.serviceEvent.effectiveTime.high"/>
         </mapping>
      </element>
      <element id="MedicationRequest.dispenseRequest.numberOfRepeatsAllowed">
         <path value="MedicationRequest.dispenseRequest.numberOfRepeatsAllowed"/>
         <short value="Repeated supply per medication (without initial dispense)"/>
         <mapping>
            <identity value="cda"/>
            <map value=".repeatNumber"/>
         </mapping>
      </element>
      <element id="MedicationRequest.dispenseRequest.quantity">
         <path value="MedicationRequest.dispenseRequest.quantity"/>
         <short value="Number of packages"/>
         <mapping>
            <identity value="cda"/>
            <map value=".entryRelationship.supply.quantity"/>
         </mapping>
      </element>
      
      <element id="MedicationRequest.substitution">
         <path value="MedicationRequest.substitution"/>
         <short value="Any restrictions on medication substitution"/>
      </element>
      <element id="MedicationRequest.substitution.allowedCodeableConcept">
         <path value="MedicationRequest.substitution.allowedCodeableConcept"/>
         <binding>
            <strength value="preferred"/>
            <valueSet value="http://terminology.hl7.org/ValueSet/v3-ActSubstanceAdminSubstitutionCode"/>
         </binding>
         <mapping>
            <identity value="cda"/>
            <map value=".entryRelationship.act.code"/>
         </mapping>
      </element>
   </differential>
</StructureDefinition>