<StructureDefinition xmlns="http://hl7.org/fhir">
   <id value="ch-emed-composition-medicationcard"/>
   <url value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-composition-medicationcard"/>
   <version value="0.1.0"/>
   <name value="CHEMEDCompositionMedicationCard"/>
   <title value="CH EMED Medication Card Composition"/>
   <status value="active"/>
   <experimental value="false"/>
   <description value="Definition of the composition for the medication card document"/>
   <kind value="resource"/>
   <abstract value="false"/>
   <type value="Composition"/>
   <baseDefinition value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-composition-epr"/>
   <derivation value="constraint"/>
   <differential>
      <element id="Composition">
         <path value="Composition"/>
         <short value="CH EMED Medication Card Composition"/>
      </element>
      <element id="Composition.language">
         <path value="Composition.language"/>
         <short value="Language of the document"/>
      </element>
      <element id="Composition.identifier.system">
         <path value="Composition.identifier.system"/>
         <min value="1"/>
      </element>
      <element id="Composition.identifier.value">
         <path value="Composition.identifier.value"/>
         <min value="1"/>
         <example>
            <label value="CH EMED"/>
            <valueString value="urn:uuid:daa8cd41-34a1-4a9c-9a6d-cd3f850142e9"/>
         </example>
      </element>
      <element id="Composition.status">
         <path value="Composition.status"/>
         <fixedCode value="final"/>
      </element>
      <element id="Composition.type">
         <path value="Composition.type"/>
         <patternCodeableConcept>
            <coding>
               <system value="http://snomed.info/sct"/>
               <code value="721912009"/>
            </coding>
         </patternCodeableConcept>
      </element>
      <element id="Composition.subject">
         <path value="Composition.subject"/>
         <short value="A patient for whom this document instance was created"/>
         <mustSupport value="true"/>
      </element>
      <element id="Composition.date">
         <path value="Composition.date"/>
         <short value="The document's creation date and time"/>
         <mustSupport value="true"/>
      </element>
      <element id="Composition.author">
         <path value="Composition.author"/>
         <short value="The author of the document (person or device)"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-practitionerrole"/>
            <targetProfile value="http://hl7.org/fhir/StructureDefinition/Device"/>
            <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-patient-epr"/>
            <targetProfile value="http://hl7.org/fhir/StructureDefinition/RelatedPerson"/>
         </type>
         <mustSupport value="true"/>
      </element>
      <element id="Composition.title">
         <path value="Composition.title"/>
         <short value="'Medikationsplan' in german or 'Plan de médication' in french or 'Piano farmacologico' in italian or 'Medication Card' in english
                        or titles in other languages are also allowed"/>
      </element>
      <element id="Composition.confidentiality.extension">
         <path value="Composition.confidentiality.extension"/>
         <slicing>
            <discriminator>
               <type value="value"/>
               <path value="url"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
      </element>
      <element id="Composition.confidentiality.extension:confidentialityCode">
         <path value="Composition.confidentiality.extension"/>
         <sliceName value="confidentialityCode"/>
         <short value="Swiss realm of confidentiality code according to the Swiss EPR regulation"/>
      </element>
      <element id="Composition.attester">
         <path value="Composition.attester"/>
         <slicing>
            <discriminator>
               <type value="value" />
               <path value="mode" />
            </discriminator>
            <rules value="open" />
         </slicing>
         <short value="The authenticator of the document (person)"/>
      </element>
      <element id="Composition.attester:legalAuthenticator">
         <path value="Composition.attester"/>
         <sliceName value="legalAuthenticator"/>
         <short value="The legal authenticator of the document (person)"/>
      </element>
      <element id="Composition.attester.time:legalAuthenticator">
         <path value="Composition.attester.time"/>
         <short value="Timestamp of the signature"/>
      </element>
      <element id="Composition.attester.party:legalAuthenticator">
         <path value="Composition.attester.party"/>
         <short value="Who attested the composition"/>
      </element>
      <element id="Composition.section">
         <path value="Composition.section"/>
         <min value="1"/>
         <slicing>
            <discriminator>
               <type value="pattern"/>
               <path value="code"/>
            </discriminator>
            <ordered value="false"/>
            <rules value="open"/>
         </slicing>
      </element>

      <!-- Section Original Representation-->
      <element id="Composition.section:originalRepresentation">
         <path value="Composition.section"/>
         <sliceName value="originalRepresentation"/>
         <short value="Original representation"/>
         <min value="1"/>
         <max value="1"/>
         <mustSupport value="true"/>
      </element>
      <element id="Composition.section:originalRepresentation.title">
         <path value="Composition.section.title"/>
         <short value="'Original Darstellung' in german or 'Représentation originale' in french or 'Rappresentazione originale' in italian or 'Original representation' in english
                        or titles in other languages are also allowed"/>
      </element>
      <element id="Composition.section:originalRepresentation.code">
         <path value="Composition.section.code"/>
         <patternCodeableConcept>
            <coding>
               <system value="http://loinc.org"/>
               <code value="55108-5"/>
            </coding>
         </patternCodeableConcept>
      </element>
      <element id="Composition.section:originalRepresentation.text">
         <path value="Composition.section.text"/>
         <short value="Representation of the original view"/>
      </element>
      <element id="Composition.section:originalRepresentation.entry">
         <path value="Composition.section.entry"/>
         <short value="PDF"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://hl7.org/fhir/StructureDefinition/Binary"/>
         </type>
         <mustSupport value="true"/>
      </element>
      <element id="Composition.section:originalRepresentation.section">
         <path value="Composition.section.section"/>
      </element>

      <!-- Section Card (Medication Statement) -->
      <element id="Composition.section:card">
         <path value="Composition.section"/>
         <sliceName value="card"/>
         <short value="Medication card"/>
         <min value="1"/>
         <max value="1"/>
         <mustSupport value="true"/>
      </element>
      <element id="Composition.section:card.title">
         <path value="Composition.section.title"/>
         <short value="'Medikamentenliste' in german or 'Liste de médicaments' in french or 'Lista farmaci' in italian or 'Medication List' in english
                        or titles in other languages are also allowed"/>
         <min value="1"/>
         <max value="1"/>
      </element>
      <element id="Composition.section:card.code">
         <path value="Composition.section.code"/>
         <min value="1"/>
         <patternCodeableConcept>
            <coding>
               <system value="http://loinc.org"/>
               <code value="10160-0"/>
            </coding>
         </patternCodeableConcept>
      </element>

      <element id="Composition.section:card.text">
         <path value="Composition.section.text"/>
         <short value="Human readable text of this section"/>
         <min value="0"/>
         <max value="1"/>
      </element>
      <element id="Composition.section:card.entry">
         <path value="Composition.section.entry"/>
         <short value="Medication statement"/>
         <min value="0"/>
         <max value="*"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-medicationstatement-card"/>
         </type>
         <mustSupport value="true"/>
      </element>
      <element id="Composition.section:card.entry.reference">
         <path value="Composition.section.entry.reference"/>
         <min value="1"/>
      </element>
      <element id="Composition.section:card.section">
         <path value="Composition.section.section"/>
         <min value="0"/>
         <max value="0"/>
      </element>

      <!-- Section Annotation -->
      <element id="Composition.section:annotation">
         <path value="Composition.section"/>
         <sliceName value="annotation"/>
         <short value="Annotation"/>
         <min value="0"/>
         <max value="1"/>
         <mustSupport value="true"/>
      </element>
      <element id="Composition.section:annotation.title">
         <path value="Composition.section.title"/>
         <short value="'Kommentar' in german or 'Commentaire' in french or 'Osservazione' in italian or 'Comment' in english
                        or titles in other languages are also allowed"/>
         <min value="1"/>
         <max value="1"/>
      </element>
      <element id="Composition.section:annotation.code">
         <path value="Composition.section.code"/>
         <min value="1"/>
         <patternCodeableConcept>
            <coding>
               <system value="http://loinc.org"/>
               <code value="48767-8"/>
            </coding>
         </patternCodeableConcept>
      </element>
      <element id="Composition.section:annotation.text">
         <path value="Composition.section.text"/>
         <short value="Human readable text of this section"/>
         <min value="1"/>
         <max value="1"/>
         <mustSupport value="true"/>
      </element>
      <element id="Composition.section:annotation.section">
         <path value="Composition.section.section"/>
         <min value="0"/>
         <max value="0"/>
      </element>
   </differential>
</StructureDefinition>