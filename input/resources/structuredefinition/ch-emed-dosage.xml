<StructureDefinition xmlns="http://hl7.org/fhir">
   <id value="ch-emed-dosage"/>
   <url value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage"/>
   <version value="2.0.0"/>
   <name value="CHEMEDDosage"/>
   <title value="CH EMED Dosage"/>
   <status value="active"/>
   <experimental value="false"/>
   <description value="Definition of the dosage"/>
   <kind value="complex-type"/>
   <abstract value="false"/>
   <type value="Dosage"/>
   <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Dosage"/>
   <derivation value="constraint"/>
   <differential>
      <element id="Dosage">
         <path value="Dosage"/>
         <short value="CH EMED Dosage"/>
      </element>
      <element id="Dosage.sequence">
         <path value="Dosage.sequence"/>
         <short value="The order of the dosage instructions"/>
         <constraint>
            <key value="ch-dosage-1"/>
            <severity value="error"/>
            <human value="No sequence number (for one dosage element) or sequence number = 1 (for more than one dosage element)"/>
            <expression value="$this.count() = 0 or $this = 1"/>
         </constraint>
      </element>
      <element id="Dosage.text">
         <path value="Dosage.text"/>
         <short value="Free text dosage instructions"/>
         <mustSupport value="true"/>
      </element>
      <element id="Dosage.patientInstruction">
         <path value="Dosage.patientInstruction"/>
         <short value="Patient medication instructions (e.g. 'take with food')"/>
         <mustSupport value="true"/>
      </element>
      <element id="Dosage.timing">
         <path value="Dosage.timing"/>
         <short value="When medication should be administered"/>
      </element>
      <element id="Dosage.timing.repeat">
         <path value="Dosage.timing.repeat"/>
         <short value="When the event is to occur"/>
      </element>
      <element id="Dosage.timing.repeat.boundsPeriod">
         <path value="Dosage.timing.repeat.boundsPeriod"/>
         <short value="Start and/or end of treatment"/>
         <mustSupport value="true"/>
      </element>
      <element id="Dosage.timing.repeat.boundsPeriod.start">
         <path value="Dosage.timing.repeat.boundsPeriod.start"/>
      </element>
      <element id="Dosage.timing.repeat.boundsPeriod.end">
         <path value="Dosage.timing.repeat.boundsPeriod.end"/>
      </element>
      <element id="Dosage.timing.repeat.when">
         <path value="Dosage.timing.repeat.when"/>
         <short value="Code for time period of occurrence"/>
         <constraint>
            <key value="ch-emed-event-timing"/>
            <severity value="warning"/>
            <human value="For the representation of the time of administration according to the 1-1-1-1 scheme, the values MORN-NOON-EVE-NIGHT are highly recommended."/>
            <expression value="$this='MORN' or $this='NOON' or $this='EVE' or $this='NIGHT'"/>
         </constraint>
         <mustSupport value="true"/>
      </element>
      <element id="Dosage.asNeededBoolean">
         <path value="Dosage.asNeededBoolean"/>
         <short value="In reserve (to be taken by the patient only if the need arises - e.g. pains)"/>
      </element>
      <element id="Dosage.route">
         <path value="Dosage.route"/>
         <short value="Route of administration"/>
         <binding>
            <strength value="required"/>
            <valueSet value="http://fhir.ch/ig/ch-emed/ValueSet/edqm-routeofadministration"/>
         </binding>
      </element>
      <element id="Dosage.route.coding">
         <path value="Dosage.route.coding"/>
         <min value="1"/>
         <mustSupport value="true"/>
      </element>
      <element id="Dosage.route.coding.system">
         <path value="Dosage.route.coding.system"/>
         <min value="1"/>
      </element>
      <element id="Dosage.route.coding.code">
         <path value="Dosage.route.coding.code"/>
         <min value="1"/>
      </element>
      <element id="Dosage.route.coding.display">
         <path value="Dosage.route.coding.display"/>
         <min value="1"/>
      </element>
      <element id="Dosage.doseAndRate">
         <path value="Dosage.doseAndRate"/>
         <short value="Amount of medication administered"/>
         <max value="1"/>
      </element>
      <element id="Dosage.doseAndRate.dose[x]">
         <path value="Dosage.doseAndRate.dose[x]"/>
         <type>
            <code value="Range"/>
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-range"/>
         </type>
         <type>
            <code value="Quantity"/>
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-quantity"/>
         </type>
         <mustSupport value="true"/>
      </element>
   </differential>
</StructureDefinition>