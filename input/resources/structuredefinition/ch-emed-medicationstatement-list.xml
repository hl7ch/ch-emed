<StructureDefinition xmlns="http://hl7.org/fhir">
   <id value="ch-emed-medicationstatement-list"/>
   <url value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-medicationstatement-list"/>
   <version value="3.0.0"/>
   <name value="CHEMEDMedicationStatementList"/>
   <title value="CH EMED MedicationStatement (LIST)"/>
   <status value="active"/>
   <experimental value="false"/>
   <description value="Definition of the medication statement for the medication list document"/>
   <kind value="resource"/>
   <abstract value="false"/>
   <type value="MedicationStatement"/>
   <baseDefinition value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-medicationstatement"/>
   <derivation value="constraint"/>
   <differential>
      <element id="MedicationStatement">
         <path value="MedicationStatement"/>
         <short value="CH EMED MedicationStatement (LIST)"/>
         <constraint>
            <key value="ch-list-1"/>
            <severity value="error"/>
            <human value="The MedicationStatement must be conform to one of these profiles: CH EMED MedicationStatement (MTP) or CH EMED MedicationStatement (CARD)"/>
            <expression value="conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-medicationstatement-treatmentplan') or 
                               conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-medicationstatement-card')"/>
         </constraint>
      </element>

      <!-- document author -->
      <element id="MedicationStatement.extension:authorDocument">
         <path value="MedicationStatement.extension" />
         <sliceName value="authorDocument" />
         <short value="Author of the original document if different from the author of the medical decision (MedicationStatement.informationSource), see also 'Guidance - Different Authors'"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-ext-author" />
         </type>
      </element>

      <!-- MedicationStatement Author -->
      <element id="MedicationStatement.informationSource">
         <path value="MedicationStatement.informationSource"/>
         <short value="The author and her/his organization of the medical decision, see also 'Guidance - Different Authors'"/>
         <min value="1"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-practitionerrole"/>
         </type>
      </element>
      <element id="MedicationStatement.informationSource.extension">
         <path value="MedicationStatement.informationSource.extension"/>
         <slicing>
            <discriminator>
               <type value="value"/>
               <path value="url"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
      </element>
      <element id="MedicationStatement.informationSource.extension:time">
         <path value="MedicationStatement.informationSource.extension"/>
         <sliceName value="time"/>
         <short value="Timestamp of the authorship/data input"/>
         <!-- CDA-spec: author.time 1..1, here 0..1 to allow the representedOrganization to be validly mapped as composition.author -->
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension"/>
            <profile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-ext-epr-time"/>
         </type>
      </element>
      <element id="MedicationStatement.informationSource.reference">
         <path value="MedicationStatement.informationSource.reference"/>
         <min value="1"/>
      </element>
 
   </differential>
</StructureDefinition>