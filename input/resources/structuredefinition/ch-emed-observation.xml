<StructureDefinition xmlns="http://hl7.org/fhir">
   <id value="ch-emed-observation"/>
   <url value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-observation"/>
   <version value="0.1.0"/>
   <name value="CHEMEDObservation"/>
   <title value="CH EMED Observation"/>
   <status value="active"/>
   <experimental value="false"/>
   <description value="Definition of the observation"/>
   <mapping>
      <identity value="cda"/>
      <uri value="http://hl7.org/v3/cda"/>
      <name value="CDA (R2)"/>
   </mapping>
   <kind value="resource"/>
   <abstract value="false"/>
   <type value="Observation"/>
   <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Observation"/>
   <derivation value="constraint"/>
   <differential>
      <element id="Observation">
         <path value="Observation"/>
         <short value="CH EMED Observation"/>
         <mapping>
            <identity value="cda"/>
            <map value="observation"/>
         </mapping>
      </element>
      <element id="Observation.extension">
         <path value="Observation.extension"/>
         <slicing>
            <discriminator>
               <type value="value"/>
               <path value="url"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
      </element>
      <element id="Observation.extension:treatmentPlan">
         <path value="Observation.extension" />
         <sliceName value="treatmentPlan" />
         <short value="Reference to the medication treatment plan"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-ext-treatmentplan" />
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".entryRelationship.substanceAdministration.id"/>
         </mapping>
      </element>
      <element id="Observation.extension:prescription">
         <path value="Observation.extension" />
         <sliceName value="prescription" />
         <short value="Reference to the medication prescription"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-ext-prescription" />
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".entryRelationship.substanceAdministration.id"/>
         </mapping>
      </element>
      <element id="Observation.extension:dispense">
         <path value="Observation.extension" />
         <sliceName value="dispense" />
         <short value="Reference to the medication dispense"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-ext-dispense" />
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".entryRelationship.supply.id"/>
         </mapping>
      </element>
      <element id="Observation.extension:medicationStatementChanged">
         <path value="Observation.extension" />
         <sliceName value="medicationStatementChanged" />
         <short value="Reference to the changed medication statement"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-ext-medicationstatement-changed" />
         </type>
         <mapping>
            <identity value="cda"/>
            <map value="entryRelationship where [hl7:substanceAdministration [hl7:templateId [@root='1.3.6.1.4.1.19376.1.9.1.3.7']]]"/>
         </mapping>
      </element>

      <!-- document author -->
      <element id="Observation.extension:authorDocument">
         <path value="Observation.extension" />
         <sliceName value="authorDocument" />
         <short value="LIST: Author of the original document if different from the author of the medical decision (Observation.performer), see also 'Guidance - Different Authors'"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-ext-author" />
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".author"/>
         </mapping>
      </element>

      <element id="Observation.identifier">
         <path value="Observation.identifier"/>
         <short value="Observation Identifier"/>
         <min value="1"/>
         <max value="1"/>
         <mapping>
            <identity value="cda"/>
            <map value=".id"/>
         </mapping>
      </element>
      <element id="Observation.identifier.system">
         <path value="Observation.identifier.system"/>
         <min value="1"/>
         <fixedUri value="urn:ietf:rfc:3986"/>
      </element>
      <element id="Observation.identifier.value">
         <path value="Observation.identifier.value"/>
         <short value="Identifier value as UUID"/>
         <min value="1"/>
      </element>
      <element id="Observation.status">
         <path value="Observation.status"/>
         <fixedCode value="final"/>
         <mapping>
            <identity value="cda"/>
            <map value=".statusCode"/>
         </mapping>
      </element>
      <element id="Observation.code">
         <path value="Observation.code"/>
         <short value="Observation code"/>
         <binding>
            <strength value="required"/>
            <valueSet value="http://fhir.ch/ig/ch-emed/ValueSet/ihe-pharmaceuticaladvicestatuslist"/>
         </binding>
         <mapping>
            <identity value="cda"/>
            <map value=".code"/>
         </mapping>
      </element>
      <element id="Observation.subject">
         <path value="Observation.subject"/>
         <short value="Patient"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-patient"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value="ClinicalDocument.recordTarget"/>
         </mapping>
      </element>
      <element id="Observation.subject.reference">
         <path value="Observation.subject.reference"/>
         <min value="1"/>
      </element>
      <element id="Observation.effectiveDateTime">
         <path value="Observation.effectiveDateTime"/>
         <short value="Effective Time"/>
         <mapping>
            <identity value="cda"/>
            <map value=".effectiveTime"/>
         </mapping>
      </element>

      <!-- Observation Author -->
      <element id="Observation.performer">
         <path value="Observation.performer"/>
         <short value="LIST: The author and her/his organization of the medical decision, see also 'Guidance - Different Authors'"/>
         <max value="1"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-practitionerrole"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".author.assignedAuthor.assignedPerson/representedOrganization"/>
         </mapping>
      </element>

      <element id="Observation.performer.extension">
         <path value="Observation.performer.extension"/>
         <slicing>
            <discriminator>
               <type value="value"/>
               <path value="url"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
      </element>
      <element id="Observation.performer.extension:time">
         <path value="Observation.performer.extension"/>
         <sliceName value="time"/>
         <short value="Timestamp of the authorship/data input"/>
         <!-- CDA-spec: author.time 1..1, here 0..1 to allow the representedOrganization to be validly mapped as composition.author -->
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension"/>
            <profile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-ext-epr-time"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".author.time"/>
         </mapping>
      </element>
      <element id="Observation.performer.reference">
         <path value="Observation.performer.reference"/>
         <min value="1"/>
      </element>

      <element id="Observation.note">
         <path value="Observation.note"/>
         <short value="COMMENT: the actual comment. OK/CHANGE/REFUSE/CANCEL/SUSPEND: the reason why the action was done."/>
         <min value="1"/>
         <max value="1"/>
      </element>
      <element id="Observation.note.text">
         <path value="Observation.note.text"/>
         <mapping>
            <identity value="cda"/>
            <map value="COMMENT: .text. OK/CHANGE/REFUSE/CANCEL/SUSPEND: .entryRelationsship where [hl7:act [hl7:templateId [@root='2.16.756.5.30.1.1.10.4.2']]]"/>
         </mapping>
      </element>
   </differential>
</StructureDefinition>