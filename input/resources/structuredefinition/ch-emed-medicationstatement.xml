<StructureDefinition xmlns="http://hl7.org/fhir">
   <id value="ch-emed-medicationstatement"/>
   <url value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-medicationstatement"/>
   <version value="0.1.0"/>
   <name value="CHEMEDMedicationStatement"/>
   <title value="CH EMED MedicationStatement"/>
   <status value="active"/>
   <experimental value="false"/>
   <description value="Definition of the basic medication statement"/>
   <mapping>
      <identity value="cda"/>
      <uri value="http://hl7.org/v3/cda"/>
      <name value="CDA (R2)"/>
   </mapping>
   <kind value="resource"/>
   <abstract value="false"/>
   <type value="MedicationStatement"/>
   <baseDefinition value="http://hl7.org/fhir/StructureDefinition/MedicationStatement"/>
   <derivation value="constraint"/>
   <differential>
      <element id="MedicationStatement">
         <path value="MedicationStatement"/>
         <short value="CH EMED MedicationStatement"/>
         <constraint>
            <key value="ch-dosage-1"/>
            <severity value="error"/>
            <human value="If dosing is structured it must be normal or split dosing"/>
            <expression value="dosage.where($this.conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-normal')).count()=0 or dosage.where($this.conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-split')).count()=0"/>
         </constraint>
         <constraint>
            <key value="ch-dosage-4"/>
            <severity value="error"/>
            <human value="Provide dosage structured or unstructured, combination is not allowed (provide structured dosage if possible)"/>
            <expression value="dosage.where($this.conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-nonstructured')).count()=0 or (dosage.where($this.conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-normal')).count()=0 and dosage.where($this.conformsTo('http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-split')).count()=0)"/>
         </constraint>
         <mapping>
            <identity value="cda"/>
            <map value="substanceAdministration"/>
         </mapping>
      </element>
      <element id="MedicationStatement.contained">
         <path value="MedicationStatement.contained"/>
         <short value="Medication inline resource"/>
         <min value="1"/>
         <max value="1"/>
      </element>

      <element id="MedicationStatement.extension">
         <path value="MedicationStatement.extension"/>
         <slicing>
            <discriminator>
               <type value="value"/>
               <path value="url"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
      </element>

      <!-- document author -->
      <element id="MedicationStatement.extension:authorDocument">
         <path value="MedicationStatement.extension" />
         <sliceName value="authorDocument" />
         <short value="Author of the original document if different from the author of the medical decision (MedicationStatement.informationSource)"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension" />
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-ext-documentauthor" />
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".author"/>
         </mapping>
      </element>

      <element id="MedicationStatement.identifier">
         <path value="MedicationStatement.identifier"/>
         <short value="MedicationStatement Identifier"/>
         <min value="1"/>
         <max value="1"/>
         <mapping>
            <identity value="cda"/>
            <map value=".id"/>
         </mapping>
      </element>
      <element id="MedicationStatement.identifier.system">
         <path value="MedicationStatement.identifier.system"/>
         <min value="1"/>
         <fixedUri value="urn:ietf:rfc:3986"/>
      </element>
      <element id="MedicationStatement.identifier.value">
         <path value="MedicationStatement.identifier.value"/>
         <min value="1"/>
         <short value="Identifier value as UUID"/>
      </element>
      <element id="MedicationStatement.status">
         <path value="MedicationStatement.status"/>
         <fixedCode value="completed"/>
         <mapping>
            <identity value="cda"/>
            <map value=".statusCode"/>
         </mapping>
      </element>
      <element id="MedicationStatement.medicationReference">
         <path value="MedicationStatement.medicationReference"/>
         <short value="Reference to the contained medication"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-medication"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".consumable.manufacturedProduct.manufacturedMaterial"/>
         </mapping>
      </element>
      <element id="MedicationStatement.subject">
         <path value="MedicationStatement.subject"/>
         <short value="Patient"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-patient"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value="ClinicalDocument.recordTarget"/>
         </mapping>
      </element>
      <element id="MedicationStatement.subject.reference">
         <path value="MedicationStatement.subject.reference"/>
         <min value="1"/>
      </element>

      <!-- MedicationStatement Author -->
      <element id="MedicationStatement.informationSource">
         <path value="MedicationStatement.informationSource"/>
         <short value="The author of the medical decision"/>
         <type>
            <code value="Reference"/>
            <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-practitioner"/>
            <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-practitionerrole"/>
            <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-patient"/>
            <targetProfile value="http://hl7.org/fhir/StructureDefinition/RelatedPerson"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".author.assignedAuthor.assignedPerson"/>
         </mapping>
      </element>

      <element id="MedicationStatement.informationSource.extension">
         <path value="MedicationStatement.informationSource.extension"/>
         <slicing>
            <discriminator>
               <type value="value"/>
               <path value="url"/>
            </discriminator>
            <rules value="open"/>
         </slicing>
      </element>
      <element id="MedicationStatement.informationSource.extension:authorTime">
         <path value="MedicationStatement.informationSource.extension"/>
         <sliceName value="authorTime"/>
         <short value="Timestamp of the authorship/data input"/>
         <!-- CDA-spec: author.time 1..1, here 0..1 to allow the representedOrganization to be validly mapped as composition.author -->
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension"/>
            <profile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-ext-epr-time"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".author.time"/>
         </mapping>
      </element>
      <element id="MedicationStatement.informationSource.extension:authorOrganization">
         <path value="MedicationStatement.informationSource.extension"/>
         <sliceName value="authorOrganization"/>
         <short value="The author's organization"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Extension"/>
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-ext-representedorganization"/>
         </type>
         <mapping>
            <identity value="cda"/>
            <map value=".author.assignedAuthor.representedOrganization"/>
         </mapping>
      </element>
      <element id="MedicationStatement.informationSource.reference">
         <path value="MedicationStatement.informationSource.reference"/>
         <min value="1"/>
      </element>

      <element id="MedicationStatement.reasonCode">
         <path value="MedicationStatement.reasonCode"/>
         <short value="Treatment reason"/>
         <max value="1"/>
         <mapping>
            <identity value="cda"/>
            <map value=".entryRelationship.observation.text"/>
         </mapping>
      </element>
      <element id="MedicationStatement.reasonCode.text">
         <path value="MedicationStatement.reasonCode.text"/>
      </element>
      <element id="MedicationStatement.note">
         <path value="MedicationStatement.note"/>
         <short value="Annotation"/>
         <max value="1"/>
         <mapping>
            <identity value="cda"/>
            <map value=".entryRelationship.act.text"/>
         </mapping>
      </element>
      <element id="MedicationStatement.dosage">
         <path value="MedicationStatement.dosage"/>
         <slicing>
            <discriminator>
               <type value="profile"/>
               <path value="$this"/>
            </discriminator>
            <rules value="closed"/>
         </slicing>
         <short value="How the medication should be taken"/>
         <min value="1"/>
      </element>
      <element id="MedicationStatement.dosage:nonstructured">
         <path value="MedicationStatement.dosage"/>
         <sliceName value="nonstructured"/>
         <short value="Free text dosage instructions"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Dosage"/>
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-nonstructured"/>
         </type>
      </element>
      <element id="MedicationStatement.dosage:structurednormal">
         <path value="MedicationStatement.dosage"/>
         <sliceName value="structurednormal"/>
         <short value="Structured Normal Dosing"/>
         <min value="0"/>
         <max value="1"/>
         <type>
            <code value="Dosage"/>
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-normal"/>
         </type>
      </element>
      <element id="MedicationStatement.dosage:structuredsplit">
         <path value="MedicationStatement.dosage"/>
         <sliceName value="structuredsplit"/>
         <short value="Structured Split Dosing"/>
         <min value="0"/>
         <max value="*"/>
         <type>
            <code value="Dosage"/>
            <profile value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-dosage-structured-split"/>
         </type>
      </element>
   </differential>
</StructureDefinition>